---
import { parseFrontmatterDateRange } from "@/lib/misc";
import { RelativeDate } from "./RelativeDate";

export interface Props {
  date: string;
}

const { date } = Astro.props;

const [_, toDate] = parseFrontmatterDateRange(date);
---

<time datetime={toDate.toISOString()} class="text-gray-500 text-sm font-normal flex items-center">
  {date}
  <span class="flex-1 border-b mx-2" />
  <RelativeDate client:idle date={toDate} />
</time>
