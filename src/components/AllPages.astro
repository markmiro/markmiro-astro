---
const allPosts = await Astro.glob("../pages/posts/*.(md|mdx)");
---

<!-- https://docs.astro.build/en/tutorial/5-astro-api/1/ -->
<ul class="flex flex-wrap">
  <li>
    <a href="/">Home</a>
  </li>
  {
    allPosts.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
    ))
  }
  <li>
    <a href="/example">Example</a>
  </li>
  <li>
    <a href="/sdlfkjsdf">404</a>
  </li>
</ul>

<style>
  a {
    display: block;
    padding: .5em 1em;
    border-right: 1px solid;
  }
  a:hover {
    background: #eee;
  }
</style>